@import "bootstrap";

@mixin box_sizing {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

html {
  overflow-y: scroll;
}

body {
  font-family: "jaf-bernino-sans","Lucida Grande","Lucida Sans Unicode","Lucida Sans",Geneva,Verdana,sans-serif;
}

section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

.center {
  text-align: center;
}

.center h1 {
  margin-bottom: 10px;
}

footer {
  margin-top: 45px;
  margin-bottom: 45px;
  padding-top: 15px;
  border-top: 1px solid #eaeaea;
  color: #999;
  a {
  	color: #999;
  	&:hover {
  	 color: #030417;
  	}
  }
}

/* TYPOGRAPHY */

h1 {
  font-size: 4em;
  color: white;
}

h3 {
  font-weight: 300;
  color: #79877C;
}

p {
    color: #f5f5f5;
    font-weight: 300;
  }

/* FORMS */

#error_explanation {
  color: #f00;
  ul {
    list-style: none;
    margin: 0 0 18px 0;
  }
}

.field_with_errors {
  @extend .control-group;
  @extend .error;
}

