/* PROFILE */
  
nav {
  overflow: hidden;
}

#profile-wall-wrapper {
    min-height: 100%;
    width: 35%;
    float: left;
    position: fixed;
}

.profile-wall {

  
  .fixed {
    position: fixed;
    top: 0;
  }

  .profile-hero {

    h1 {
      font-size: 3em;
    }

    #profile-photo {

      img {
        border: 3px solid white;
      }

      .img-circle {
        width: 120px;
        height: 120px;
      }
    }  

    #bio {
      padding-top: 5px;
      p {
        font-weight: 100;
        color: #b3b3b1;
      }
    }

    #new-episode {

      background-color:rgba(0, 0, 0, 0.1);
      border: 1px solid #eaeaea;
      border-radius: 15px;
      height: 40px;
      width: 180px;
      color: #eaeaea;
        
        
      &:hover {
       color: #24c0ab;
       background-color:rgba(0, 0, 0, 0.1);
       border: 1px solid #24c0ab;
       text-decoration: none;       
      }

      &:focus {
        outline: 0;
      }
    }

    #profile-stats-posts {
       
      overflow: auto;
      font-weight: 300;
      font-size: 11px;
      text-transform: uppercase;
      letter-spacing: 0.2em;

      a {
        color: #b3b3b1;
        padding-right: 10px;
        display: inline-block;

        &:first-child {
          color: white;
        }

        &:hover {
         text-decoration: none;
         color: white;
        }
      }
      
      strong {
        display: block;
      }  
    }

    #profile-stats-followers {
      
      overflow: auto;
      font-weight: 300;
      font-size: 11px;
      text-transform: uppercase;
      letter-spacing: 0.2em;

      a {
        color: #b3b3b1;
        padding-right: 10px;
        display: inline-block;

        &:nth-child(2) {
          color: white;
        }

        &:hover {
         text-decoration: none;
         color: white;
        }
      }
      
      strong {
        display: block;
      }  
    }

    #profile-stats-following {
      
      overflow: auto;
      font-weight: 300;
      font-size: 11px;
      text-transform: uppercase;
      letter-spacing: 0.2em;

      a {
        color: #b3b3b1;
        padding-right: 10px;
        display: inline-block;

        &:nth-child(3) {
          color: white;
        }

        &:hover {
         text-decoration: none;
         color: white;
        }
      }
      
      strong {
        display: block;
      }  
    }
  }
}

.feature {

  min-height: 100%;
  height: auto;
  width: 65%;
  float: right;
  background: #19191f;

  h2 {
    padding: 15px 0 0 35px;
    font-weight: 300;
    font-spacing: 0.2em;
  }

  .gem {

    .youtube-player {
      
      float: left;
    }

    .track-info {
      
      background: black;
      padding-left: 25px;
      padding-right: 25px;
      height: 304px;

      #episode-number {
        padding-top: 25px;
        color: #b3b3b1;
        font-weight: 300;
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 0.2em;
      }

      #track-title {
        h4 {
          color: #24c0ab;
          font-weight: 300;
          margin-bottom: 2px;
        }
      }

      #artist-name {
        color: white;
      }

      #blurb {
        padding-top: 15px;
        color: $grayLight;
      }

      #timestamp {
        padding-top: 35px;
        font-size: 11px;
      }
      
    }
  }

  ul {
    list-style: none;
    margin: 0;
    padding-left:35px;
    padding-right:35px;

    li {
      &:first-child {
        padding-bottom: 35px;
      }
      padding-bottom: 10px;
    }
      
    .episode {  

      margin: 0;

      h3 {
        padding: 0 0 15px 0;  
      }

      .menu-item {
        padding-right: 5px;
        padding-left: 5px; 
        background: black;
        border: 1px solid #22222e;
        border-radius: 5px 5px 5px 5px;
         
        opacity: 0.65;
        filter: alpha(opacity=55);

        &:hover {
          opacity: 1.0;
          filter: alpha(opacity=100);
          text-decoration: none;
        }

        &:focus {
          outline: 0;
        }

        #thumb-episode-number {
          padding-top: 5x;
          color: #b3b3b1;
          font-weight: 300;
          font-size: 10px;
          text-transform: uppercase;
          letter-spacing: 0.2em;
      }

        #thumb-title {
          color: #24c0ab;
        }

        #thumb-artist {
          padding-bottom: 5px;
          color: white;
          font-weight: 400;
          font-size: 12px;
        }  
      }
    }

    li {

      display: inline-block;

      &:last-child {
          padding-bottom: 25px;
        }
    }   
  }
}

/* FOLLOWERS AND FOLLOWING PAGES */

.follow {
  
  height: 100%;
  width: 65%;
  float: right;
  background: #0f1010;

  h2 {
    padding: 15px 0 15px 45px;
    font-weight: 300;
  }

  ul {
    list-style: none;
    padding-left: 45px;

    li {
      
      padding-bottom: 25px;

      #follow-photo {
        float: left;
        padding-right: 25px;

        .img-circle {
          height: 75px;
          width: 75px;
        }
      }

      #follow-name {
        padding-top: 5px;
        display: block;

        a {
          text-decoration: none;
          color: #08c;
        }
      }

      p {
        font-weight: 300;
        color: #b3b3b1;
      }
    }
   
  }
}

