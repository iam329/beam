@import "bootstrap";

@mixin box_sizing {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

html {
  overflow-y: auto;
  overflow-x: hidden;
  height: 100%;
  width: 100%;
}

body {
  font-family: "jaf-bernino-sans","Lucida Grande","Lucida Sans Unicode","Lucida Sans",Geneva,Verdana,sans-serif;
  height: 100%;
  width: 100%;

}

section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

.center {
  text-align: center;
}

.center h1 {
  margin-bottom: 10px;
}

footer {
  margin-top: 45px;
  margin-bottom: 45px;
  padding-top: 15px;
  border-top: 1px solid #eaeaea;
  color: #999;
  a {
        color: #999;
        &:hover {
         color: #030417;
        }
  }
}

/* TYPOGRAPHY */

h1 {
  font-size: 4em;
  color: white;
}

h2 {
  color: white;
}

h3 {
  font-weight: 300;
  color: #79877C;
}

p {
    color: #f5f5f5;
    font-weight: 300;
  }

/* FORMS */

#error_explanation {
  color: #f00;
  ul {
    list-style: none;
    margin: 0 0 18px 0;
  }
}

.field_with_errors {
  @extend .control-group;
  @extend .error;
}

/* USER FORMS */

.user-forms {

  #signin {
    background-image: url(<%= asset_path('mic.jpg') %>);
    background-size: cover;
    background-position: center;
    width: 100%;
    height: 100%;
    position: absolute;
  }

  #signup {
    background-image: url(<%= asset_path('type.jpg') %>);
    background-size: cover;
    background-position: center;
    width: 100%;
    height: 100%;
    position: absolute;
  }

  #episode {
    background-image: url(<%= asset_path('mic.jpg') %>);
    background-size: cover;
    background-position: center;
    width: 100%;
    height: 100%;
    position: absolute;

  }

  h1 {
    padding: 90px 0 15px 0;
  }

  input {
    height:100%;
    width: 460px;
    border:none;
    background-color:rgba(0, 0, 0, 0.25);
    color: #fafafa;
    font-size: 2em;
    font-weight: 100;
    line-height: 100%;
  }

  .form-divider {
    padding: 10px 0 10px 0;
  }

  form input[type=submit] {
    background-color:rgba(0, 0, 0, 0.1);
    border: 1px solid #eaeaea;
    border-radius: 15px;
    height: 50px;
    width: 200px;

    &:hover {
     color: white;
     background: #24c0ab;
     border: 1px solid #24c0ab;
    }

    &:focus {
      outline: 0;
    }

  }
}

/* MENU */

.menu {
        position:absolute;
    bottom:0;
    width:100%;
    padding-bottom: 30px;

        img {
    width: 25px;
    height: 25px;
                padding-right:15px;
        }

        #icon_home:hover {

        }
        #icon_profile:hover {

        }

        #icon_search:hover {

        }
        #icon_settings:hover {

        }
}

/* LOGIN/OUT */
.login-out {
  position:absolute;
  top: 15px;
  left: 15px;

  img {
    width: 25px;
    height: 25px;

  }
}

/* ACTION BUTTON */

#button {
      padding-top: 15px;
    }

#new-action {
  background-color:rgba(0, 0, 0, 0.1);
  border: 1px solid #eaeaea;
  border-radius: 15px;
  height: 40px;
  width: 180px;
  color: #eaeaea;

  &:hover {
   color: #24c0ab;
   background-color:rgba(0, 0, 0, 0.1);
   border: 1px solid #24c0ab;
   text-decoration: none;
  }

  &:focus {
    outline: 0;
  }
}

/* NAV */

.nav-pills {

  padding: 10px;

  &.nav > li > a:hover {
    background: transparent;
  }

  a {
    margin-right: 5px;
    color: #edeaea;
    &:hover {
        color: white;
        background: none;
      }
    &:focus {
        outline: 0;
      }

    }

    .dropdown-menu {
      min-width:100%;
      background: none;
      color:white;
      border:none;
      box-shadow: none;

      a {
      margin-right: 5px;
      color: #edeaea;
      &:hover {
        color: white;
        background: none;
      }
    }

  }
}

/* HOME PAGE */

#home-wall-wrapper {
    min-height: 100%;
    width: 35%;
    float: left;
    position: fixed;
    background-image: url(<%= asset_path('mic.jpg') %>);
    background-size: cover;
    background-position: center;
}

.home-wall {

  .fixed {
    position: fixed;
    top: 0;
  }

  .home-hero {

    h1 {
      padding-top: 225px;
      font-size: 4em;
    }

    #slogan {
      padding-top: 5px;
      p {
        font-weight: 100;
        color: #b3b3b1;
      }
    }

  }
}

.home-feature {

  min-height: 100%;
  height: auto;
  width: 65%;
  float: right;
  background: #19191f;
  
  #stage-background {
  	z-index:2;
  	
  	position: fixed;
  	min-height: 415px; 
  	width: 100%;
  	background: #0c0c0c;
  }
  
  #stage-border {
  	position: fixed;
  	z-index: 2;
  	min-height: 20px;
  	width: 100%;
  	//background: white; 
  	top:415px;
  	
  	background: -moz-linear-gradient(top, rgba(25,25,31,1) 0%, rgba(255,255,255,0) 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(25,25,31,1)), color-stop(100%,rgba(255,255,255,0))); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top, rgba(25,25,31,1) 0%,rgba(255,255,255,0) 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top, rgba(25,25,31,1) 0%,rgba(255,255,255,0) 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(top, rgba(25,25,31,1) 0%,rgba(255,255,255,0) 100%); /* IE10+ */
	background: linear-gradient(to bottom, rgba(25,25,31,1) 0%,rgba(255,255,255,0) 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#19191f', endColorstr='#00ffffff',GradientType=0 ); /* IE6-9 */
  }

  h2 {
  	z-index: 2;
  	
  	position: fixed;
    padding: 15px 0 0 35px;
    font-weight: 300;
    font-spacing: 0.2em;
  }

  .stage {
  	 z-index: 2;

    position: fixed;
    padding-top: 75px;

    padding-bottom: 35px;

    .gem {	
    	
      padding-left: 35px;
      padding-right: 35px;

      .youtube-player {
        float: left;
      }

      .track-info {

        background: black;
        padding-left: 25px;
        padding-right: 25px;
        height: 304px;

        #track-title {

          h4 {
            padding-top: 25px;
            color: #24c0ab;
            font-weight: 300;
            margin-bottom: 2px;
          }
        }

        #artist-name {
          color: white;
        }

        #blurb {
          padding-top: 15px;
          color: $grayLight;
        }

        #profile-photo {
          padding-top: 35px;

          img {
              float: left;
          }

          .img-circle {
                width: 50px;
                height: 50px;
                border: 2px solid #eaeaea;
          }
        }

        #timestamp {

            padding-left: 10px;
            display:inline;
            line-height: 55px;
            font-size: 11px;

          #username {
            a {
              color: #eaeaea;

              &:hover {
                text-decoration: none;
                color: #24c0ab;
              }
            }
          }
        }
      }
    }
  }

  .chest {

    ul {
      z-index: 1;
		
      list-style: none;
      margin: 0;
      padding-left:35px;
      padding-right:35px;
      
      padding-top: 450px;

      li {

        padding-bottom: 10px;
      }

      .episode {
      	
        margin: 0;

        h3 {
          padding: 0 0 15px 0;
        }

        .menu-item {
          text-align: left;
          padding: 0 0 5px 0;
          background: black;
          border: 1px solid #2d2d40;
          border-radius: 5px 5px 5px 5px;

          opacity: 0.60;
          filter: alpha(opacity=50);

          &:hover {
            opacity: 1.0;
            filter: alpha(opacity=100);
            text-decoration: none;
          }

          &:focus {
            outline: 0;
          }

          .info-box {
            position: relative;
            width: 211px;
            height: 55px;
            overflow:hidden;

            #thumb-title {
              width: 171px;
              padding-top: 10px;
              padding-left: 10px;
              padding-right: 35px;
              color: #24c0ab;
            }

            #thumb-artist {

              width: 171px;
              padding-bottom: 5px;
              padding-left: 10px;
              color: white;
              font-size: 12px;
            }

            .img-circle {
              position: absolute;
              bottom: 10px;
              right: 10px;
              width: 30px;
              height: 30px;
              border: 1px solid #eaeaea;
            }
          }

          #thumb-photo {

          }
        }

      }

      li {

        display: inline-block;

        &:last-child {
            padding-bottom: 25px;
          }
      }
    }
  }
}

