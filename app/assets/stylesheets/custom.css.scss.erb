/* FOLLOW BUTTON */

.follow-button {
  form input[type=submit] {
    background-color:rgba(0, 0, 0, 0.1);
    border: 1px solid #eaeaea;
    border-radius: 15px;
    height: 40px;
    width: 180px;
    color: #eaeaea;
    
    
    &:hover {
     color: white;
     background-color:rgba(0, 0, 0, 0.1);
     border: 1px solid #24c0ab;
      
    }

    &:focus {
