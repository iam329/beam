@import "bootstrap";

@mixin box_sizing {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

html {
  overflow-y: scroll;
  height: 100%;
  width: 100%;
}

body {
  font-family: "jaf-bernino-sans","Lucida Grande","Lucida Sans Unicode","Lucida Sans",Geneva,Verdana,sans-serif;
  height: 100%;
  width: 100%;

}

section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

.center {
  text-align: center;
}

.center h1 {
  margin-bottom: 10px;
}

footer {
  margin-top: 45px;
  margin-bottom: 45px;
  padding-top: 15px;
  border-top: 1px solid #eaeaea;
  color: #999;
  a {
  	color: #999;
  	&:hover {
  	 color: #030417;
  	}
  }
}

/* TYPOGRAPHY */

h1 {
  font-size: 4em;
  color: white;
}

h2 {
  color: white;
}

h3 {
  font-weight: 300;
  color: #79877C;
}

p {
    color: #f5f5f5;
    font-weight: 300;
  }

/* FORMS */

#error_explanation {
  color: #f00;
  ul {
    list-style: none;
    margin: 0 0 18px 0;
  }
}

.field_with_errors {
  @extend .control-group;
  @extend .error;
}

/* USER FORMS */

.user-forms {
  
  #signin {
    background-image: url(<%= asset_path('mic.jpg') %>);
    background-size: cover;
    background-position: center;
    width: 100%;
    height: 100%;
    position: absolute;
  }

  #signup {
    background-image: url(<%= asset_path('type.jpg') %>);
    background-size: cover;
    background-position: center;
    width: 100%;
    height: 100%;
    position: absolute;
  }

  #episode {
    background-image: url(<%= asset_path('mic.jpg') %>);
    background-size: cover;
    background-position: center;
    width: 100%;
    height: 100%;
    position: absolute;

  }

  h1 {
    padding: 90px 0 15px 0; 
  }

  input { 
    height:100%;
    width: 460px;
    border:none;
    background-color:rgba(0, 0, 0, 0.25);
    color: #fafafa;
    font-size: 2em;
    font-weight: 100;
    line-height: 100%;
  }

  .form-divider {
    padding: 10px 0 10px 0;
  }

  form input[type=submit] {
    background-color:rgba(0, 0, 0, 0.1);
    border: 1px solid #eaeaea;
    border-radius: 15px;
    height: 50px;
    width: 200px;
    
    &:hover {
     color: white;
     background: #24c0ab;
     border: 1px solid #24c0ab;
    }

    &:focus {
      outline: 0;
    }

  }
}

/* NAV */

.nav-pills {

  padding: 10px;

  &.nav > li > a:hover {
    background: transparent;
  }

  a {
    margin-right: 5px;
    color: #edeaea;
    &:hover {
        color: white;
        background: none;
      }
    &:focus {
        outline: 0;
      }  

    }

    .dropdown-menu {
      min-width:100%;
      background: none;
      color:white;
      border:none;
      box-shadow: none;

      a {
      margin-right: 5px;
      color: #edeaea;
      &:hover {
        color: white;
        background: none;
      }
    }

  }
}

