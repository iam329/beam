    border-radius: 15px;
    height: 40px;
    width: 180px;
    color: #eaeaea;
    
    
    &:hover {
     color: #24c0ab;
     background-color:rgba(0, 0, 0, 0.1);
     border: 1px solid #24c0ab;
      
    }

    &:focus {
      outline: 0;
    }
  }
}

/* UNFOLLOW BUTTON */

.unfollow-button {
  form input[type=submit] {
    background-color: #24c0ab;
