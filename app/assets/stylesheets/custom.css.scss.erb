/* SIGNUP */

.signup-in {
  
  
  #signin {
    background-image: url(<%= asset_path('mic.jpg') %>);
    background-size: cover;
    background-position: center;
    width: 100%;
    height: 100%;
    position: absolute;
  }

  #signup {
    background-image: url(<%= asset_path('type.jpg') %>);
    background-size: cover;
    background-position: center;
    width: 100%;
    height: 100%;
    position: absolute;
  }

  h1 {
    padding: 90px 0 15px 0; 
  }

  input { 
    height:100%;
    width: 460px;
    border:none;
    background-color:rgba(0, 0, 0, 0.25);
    color: #fafafa;
    font-size: 2em;
    font-weight: 100;
    line-height: 100%;
  }

  .form-divider{
    padding: 10px 0 10px 0;
  }

  form input[type=submit] {
    background: none;
    border: 1px solid #eaeaea;
    border-radius: 15px;
    height: 50px;
    width: 200px;
    
    &:hover {
     color: white;
     background: #24c0ab;
     border: 1px solid #24c0ab;
    }

  }

  nav {
      padding: 10px;

      a {
        margin-right: 5px;
        color: #d7dee3;
        &:hover {
          color: white;
          background: none;
        }
      }
  }
}

