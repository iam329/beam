<% provide(:title, @user.name) %>
<div style="<%= show_user_bg %>">
	<nav>
		   	<ul class="nav nav-pills pull-left">
		       	<li><%= link_to "Home", root_path %></li> 	
		    </ul>


		    <% if signed_in? %>
			    <ul class="nav nav-pills pull-right">
			       	 <li id="fat-menu" class="dropdown">
	              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
	                Account <b class="caret"></b>
	              </a>
	              <ul class="dropdown-menu pull-right">
	                <li><%= link_to "Profile", profile_path(current_user.name) %></li>
	                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
	                <li>
	                  <%= link_to "Log Out", logout_path, method: "delete" %>
	                </li>
	              </ul>
	            </li>	
			    </ul>
		   	<% end %>	 
	</nav>
	
	<div class="center profile-hero">	

		<div id="profile-photo">
			<%= image_tag @user.photo.url, size: "120x120", class: "img-circle" %>
		</div>	

		<div id="username">
			<h1><%= @user.name %></h1>
		</div>

		<div id="bio">
			<p><%= @user.bio %></p>
		</div>
		
		<div>
			<% if current_user == @user %>
				<%= button_to "New Episode", new_post_path, id:"new-episode", method: "get" %>
			<% end %>
		</div>

		<div>	
			<% unless !signed_in? || current_user == @user %>
	  			<% if current_user.following?(@user) %>
	    			<%= render 'unfollow' %>
	  			<% else %>
	    			<%= render 'follow' %>
	  			<% end %>  		
			<% end %>	
		</div>	

		<div id="profile-stats-followers">
			<a href="<%= profile_path(@user.name) %>">
			   <strong class="stat">
			     <%= @count %>
			   </strong>
			   Episodes
			</a>				   

			<a href="<%= followers_user_path(@user) %>">
			  <strong id="followers" class="stat">
			    <%= @user.followers.count %>
			  </strong>
			  Followers
			</a>	

			<a href="<%= following_user_path(@user) %>">
			  <strong class="stat">
			    <%= @user.followed_users.count %>
			  </strong>
			  Following
			</a>
		</div>
		
	</div>
</div>	


<div class="container follow">

	<h2>Followers</h2>

	<ul>
		<% @users.each do |f|  %>

			<li>
				<div>
					
					<div id="follow-photo"> 
						<%= link_to image_tag(f.photo.url, size: "75x75", class: "img-circle"), profile_path(f.name) %>	
					</div>

					<div id="follow-name">
						<h4><%= link_to f.name, profile_path(f.name) %></h4>
					</div>

					<div>
						<p><%= f.bio %></p>
					</div>					

				</div>
			</li>
				
		<% end %>
	</ul>
		
</div>