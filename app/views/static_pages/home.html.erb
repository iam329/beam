        <% @feed_items = @feed_items_user %>
        <% @count = @count_user %>

    <% else %>
        <% @latestpost = @latestpost_all %>
        <% @feed_items = @feed_items_all %>
        <% @count = @count_all %>

    <% end %>
        
    <div id="stage-background">
    </div>

    <div id="stage-border">
    </div>

    <div id="latest-episode">
        <h3>Trending</h3>
    </div>
            
