                                <% else %>
                                    <%= render 'users/current_like' %>
                                <% end %>
                            </span>
                            <!--
                            <span id="favourite">
                                <%= image_tag(asset_path("favourite_button.svg"), size:"23x20", class:"favourite-button") %>
                            </span>
                        -->
                        </div>
                           
                    </section>
                 </section>

                </div>

            <% end %>

    <div class="chest">
        <% if @count>0 && @count<4 %>

            <ul >
                <% @feed_items.each_with_index do |p,i|  %>

                <% ep = @count-i %>

                <li>
                    <div class="episode">

